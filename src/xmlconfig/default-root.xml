<!--
  These are the default settings for the root node of a datasource tree.

  WARNING: This file is overwritten by "make install"

  It is recommended to place all site customizations in site-global.xml,
  as it would not be overwritten by the installer.
-->

<configuration>
  <datasources>

    <!-- Default views must be defined -->
    <param name="default-subtree-view" value="default-dir-html" />
    <param name="default-leaf-view" value="default-rrd-html" />
    <param name="rrgraph-views">
      last24h-small,last24h,lastweek,lastmonth,lastyear
    </param>

    <!-- Disperse the collector timeoffsets. This will split the
         collector job in multiple smaller jobs -->
    <param name="collector-dispersed-timeoffset" value="yes"/>

    <!-- Minimum set of parameters in case of
         collector-dispersed-timeoffset=yes -->
    <param name="collector-timeoffset-hashstring" value="%system-id%zz" />
    <param name="collector-timeoffset-min" value="0" />
    <param name="collector-timeoffset-max" value="300" />
    <param name="collector-timeoffset-step" value="60" />

    <param name="collector-instance-hashstring" value="%system-id%xx" />

    <!-- Default schedule for the monitor -->
    <param name="monitor-period"     value="300" />
    <param name="monitor-timeoffset" value="75" />

    <!-- Length of the time period over which the average health
         status is calculated-->
    <param name="health-lookup-period"  value="1800" />

    <!-- Default values for health status levels
         if health status is higher or equal the good level => green
         if health status is higher or equal the warning level => yellow
         if health status is below the warning level => red

         More than 25 minutes downtime in last 30 minutes => red,
         otherwise yellow.
    -->
    <param name="health-level-good"     value="100" />
    <param name="health-level-warning"  value="15" />

  </datasources>
</configuration>
