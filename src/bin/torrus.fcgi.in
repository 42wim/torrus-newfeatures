# FastCGI handler
# Can be used as alternative to mod_perl in Apache
# Can also be used with lighttpd


BEGIN { require '@torrus_config_pl@'; }

use strict;
use CGI::Fast;
use Torrus::Log;
use Torrus::CGI;


if( $Torrus::Renderer::globalDebug )
{
    &Torrus::Log::setLevel('debug');
}


# After processing $count requests, we exit and let FCGI re-spawn the process.
# This way there's less chance of DB becoming corrupted
# The count is randomized, so that multiple FCGI processes don't stop at
# the same time
my $count = int(50 + rand(50));

while( my $q = new CGI::Fast )
{
    Torrus::CGI->process($q);
    
    if( $count-- <= 0 )
    {
        exit;
    }
}


